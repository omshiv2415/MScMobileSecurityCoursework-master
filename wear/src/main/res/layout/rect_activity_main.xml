<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobilesecurity.msc.com.fitnesstracker.MainActivity"
    tools:deviceIds="wear_square">

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:hint="Login"
        android:textSize="@dimen/txtLogin"
        android:paddingLeft="@dimen/left" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:textSize="@dimen/txtLogin"
        android:paddingLeft="@dimen/left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="Login"
        android:layout_marginTop="24dp"
        android:id="@+id/wearbtnLogin"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/left" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="32dp"
        android:id="@+id/wearbtnRegister"
        android:textSize="@dimen/left"
        android:text="Register" />
</LinearLayout>
